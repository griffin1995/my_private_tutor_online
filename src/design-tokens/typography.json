		"$comment2": "IMPLEMENTATION REASON: Type-safe semantic components, future-proof Tailwind CSS 4.0 ready",
		"$type": "typography",

		"display": {
			"$description": "Display text variants - hero and page titles",
			"hero": {
				"$value": {
					"fontFamily": "{font.family.heading}",
					"fontSize": "4rem",
					"fontWeight": "700",
					"lineHeight": "1.1",
					"letterSpacing": "-0.035em"
				},
				"$description": "Semantic display hero - major hero sections, landing pages"
			},
			"page": {
				"$value": {
					"fontFamily": "{font.family.heading}",
					"fontSize": "3rem",
					"fontWeight": "700",
					"lineHeight": "1.2",
					"letterSpacing": "-0.03em"
				},
				"$description": "Semantic display page - page title headings"
			}
		},

		"heading": {
