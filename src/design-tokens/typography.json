				"$value": {
					"fontFamily": "{font.family.heading}",
					"fontSize": "1.5rem",
					"fontWeight": "600",
					"lineHeight": "1.4",
					"letterSpacing": "-0.015em"
				},
				"$description": "Semantic title large - main component titles"
			},
			"medium": {
				"$value": {
					"fontFamily": "{font.family.heading}",
					"fontSize": "1.25rem",
					"fontWeight": "600",
					"lineHeight": "1.4",
					"letterSpacing": "-0.01em"
				},
				"$description": "Semantic title medium - secondary component titles"
			},
			"small": {
				"$value": {
					"fontFamily": "{font.family.heading}",
					"fontSize": "1.125rem",
					"fontWeight": "600",
					"lineHeight": "1.4",
					"letterSpacing": "-0.005em"
