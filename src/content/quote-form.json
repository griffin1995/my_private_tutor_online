              { "value": "drama", "label": "Drama" },
              { "value": "computer-science", "label": "Computer Science" },
              { "value": "religious-studies", "label": "Religious Studies" },
              { "value": "philosophy", "label": "Philosophy" },
              { "value": "oxbridge-prep", "label": "Oxbridge Preparation" },
