{
  "hero": {
    "title": "Request Your Personalised Quote",
    "subtitle": "Begin Your Child's Academic Excellence Journey",
    "description": "Complete our comprehensive form to receive a bespoke tutoring proposal tailored to your child's educational needs. All enquiries receive a personal response from Elizabeth Burrows within 24 hours."
  },
  "form": {
    "title": "Tell Us About Your Requirements",
    "description": "Please provide detailed information about your child's educational needs so we can match them with the perfect tutor and create a personalised learning plan.",
    "sections": [
      {
        "title": "Contact Information",
        "description": "Your contact details for our response",
        "fields": [
          {
            "id": "parentName",
            "label": "Parent/Guardian Name",
            "placeholder": "Enter your full name",
            "type": "text",
            "required": true,
            "validation": {
              "message": "Please enter your full name"
            }
          },
          {
            "id": "email",
            "label": "Email Address",
            "placeholder": "your.email@example.com",
            "type": "email",
            "required": true,
            "validation": {
              "message": "Please enter a valid email address",
              "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
            }
          },
          {
            "id": "phone",
            "label": "Telephone Number",
            "placeholder": "01234 567 890",
            "type": "tel",
            "required": true,
            "validation": {
              "message": "Please enter a valid UK telephone number",
              "pattern": "^(\\+44|0)[0-9\\s-]{9,}$"
            }
          },
          {
            "id": "postcode",
            "label": "Postcode",
            "placeholder": "SW1A 1AA",
            "type": "text",
            "required": false,
            "validation": {
              "message": "Please enter a valid UK postcode"
            }
          }
        ]
      },
      {
        "title": "Student Information",
        "description": "Details about your child's educational requirements",
        "fields": [
          {
            "id": "studentName",
            "label": "Student's Name",
            "placeholder": "Enter your child's name",
            "type": "text",
            "required": true,
            "validation": {
              "message": "Please enter your child's name"
            }
          },
          {
            "id": "studentAge",
            "label": "Student's Age",
            "placeholder": "Enter age in years",
            "type": "text",
            "required": true,
            "validation": {
              "message": "Please enter your child's age",
              "pattern": "^[0-9]{1,2}$"
            }
          },
          {
            "id": "educationLevel",
            "label": "Current Education Level",
            "placeholder": "Select education level",
            "type": "select",
            "required": true,
            "validation": {
              "message": "Please select your child's education level"
            },
            "options": [
              { "value": "primary-ks1", "label": "Primary - Key Stage 1 (Ages 5-7)" },
              { "value": "primary-ks2", "label": "Primary - Key Stage 2 (Ages 7-11)" },
              { "value": "secondary-ks3", "label": "Secondary - Key Stage 3 (Ages 11-14)" },
