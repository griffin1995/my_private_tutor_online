# FAQ Analytics Integration - Environment Configuration
# Copy to .env.local and configure with your actual values

# CONTEXT7 SOURCE: /context7/developers_google-analytics-devguides - GA4 configuration variables
# Google Analytics 4 Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_DEBUG_MODE=false

# Analytics Features Configuration
NEXT_PUBLIC_ENABLE_FAQ_TRACKING=true
NEXT_PUBLIC_ENABLE_CONVERSION_TRACKING=true
NEXT_PUBLIC_ENABLE_USER_SEGMENTATION=true
NEXT_PUBLIC_ENABLE_SEARCH_ANALYTICS=true

# Business Intelligence Configuration
NEXT_PUBLIC_TARGET_REVENUE=381600
NEXT_PUBLIC_TARGET_TICKET_REDUCTION=40
NEXT_PUBLIC_TARGET_CONVERSION_RATE=15

# Privacy and Compliance
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy-policy
NEXT_PUBLIC_ENABLE_CONSENT_BANNER=true
NEXT_PUBLIC_CONSENT_MODE_DEFAULT=denied

# Performance and Testing
NEXT_PUBLIC_ANALYTICS_SAMPLE_RATE=1.0
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_MAX_EVENTS_PER_SESSION=100

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=

# Development and Debug Settings
NEXT_PUBLIC_ANALYTICS_DEBUG_CONSOLE=false
NEXT_PUBLIC_ENABLE_TEST_EVENTS=false
NEXT_PUBLIC_SHOW_ANALYTICS_DASHBOARD=false