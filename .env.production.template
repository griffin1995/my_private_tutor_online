# MY PRIVATE TUTOR ONLINE - Production Environment Template
# Copy this file to .env.production for production deployment

# NEXT.JS PRODUCTION CONFIGURATION
NEXT_PUBLIC_API_URL=https://myprivatetutoronline.com
NEXT_PUBLIC_WEB_URL=https://myprivatetutoronline.com
NEXT_PUBLIC_ENVIRONMENT=production

# MAINTENANCE & FEATURE TOGGLES
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# VERCEL CONFIGURATION
VERCEL_ENV=production

# AUTHENTICATION (Production)
NEXTAUTH_SECRET=your-secure-production-secret-key-here
